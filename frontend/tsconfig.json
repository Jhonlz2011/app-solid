{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "target": "ESNext",
    // Modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    // Type Checking & Safety
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ], // Alias general
      "@modules/*": [
        "./src/modules/*"
      ], // Acceso directo a m√≥dulos
      "@shared/*": [
        "./src/shared/*"
      ], // Acceso directo a hooks/ui compartidos
      "@config/*": [
        "./src/config/*"
      ], // Acceso a env/menu
      "@layout/*": [
        "./src/layout/*"
      ], // Acceso a layouts
      "@backend/*": [
        "../backend/src/*"
      ]
    }
  }
}